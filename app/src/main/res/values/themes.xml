<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Homework6" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Homework6" parent="Base.Theme.Homework6" />

    <style name="AppButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="PinText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/hint</item>
    </style>

    <style name="ProfileTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PinButtonTextAppearance" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="ProfileButtonTextAppearance" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>